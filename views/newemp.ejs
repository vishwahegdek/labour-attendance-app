<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Form</title>
    <style>
        a {
            display: block;
            margin-top: 20px;
            text-align: center;
            text-decoration: none;
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            font-size: 16px;
        }

        a:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>Employee Information</h1>
    <a href="/">Home</a>

    <!-- Form to edit existing employee details -->
    <form action="/submitemp" method="post">
        <% employees.forEach((employee) => { %>
            <label for="employeeName<%= employee.id %>">Name:</label>
            <input type="text" id="employeeName<%= employee.id %>" name="name" value="<%= employee.name %>" required>

            <br>
            <label for="employeeSalary<%= employee.id %>">Salary:</label>
            <input type="text" id="employeeSalary<%= employee.id %>" name="salary" value="<%= employee.salary %>" required>

            <br>
            <!-- Display ID for existing employees -->
            <label for="employeeId<%= employee.id %>">ID:</label>
            <input type="text" id="employeeId<%= employee.id %>" name="id" value="<%= employee.id %>" readonly>

            <hr>
        <% }); %>

        <button type="submit">Update Existing Employees</button>
    </form>
    <hr>

    <!-- Form to add a new employee -->
    <form action="/addemp" method="post">
        <label for="newEmployeeName">New Employee Name:</label>
        <input type="text" id="newEmployeeName" name="name" required>

        <br>
        <label for="newEmployeeSalary">New Employee Salary:</label>
        <input type="text" id="newEmployeeSalary" name="salary" required>

        <hr>

        <button type="submit">Add New Employee</button>
    </form>
</body>
</html>
